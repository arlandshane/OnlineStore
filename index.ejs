			<span class="carousel-text">Elegance</span>
			<script>
				const texts = [
					"Chic",
					"Trendy",
					"Stylish",
					"Modern",
					"Suave",
					"Sleek",
				];
				const texts2 = ["Elegance", "Trend", "Style", "Suave"];
				const text = document.querySelector(".carousel-text");
				const text2 = document.querySelector(".rolling-text");
				let currentIndex = 0;
				let i = 0;
				setInterval(() => {
					text.style.opacity = 0;
					setTimeout(() => {
						text.innerText = texts[currentIndex];
						text.style.opacity = 1;
						currentIndex = (currentIndex + 1) % texts.length;
					}, 500);
				}, 2500);
				setInterval(() => {
					text2.style.opacity = 0;
					setTimeout(() => {
						text2.innerText = texts2[i];
						text2.style.opacity = 1;
						i = (i + 1) % texts2.length;
					}, 500);
				}, 2700);
			</script>
		</section>
